{
  "extends": [
    "tslint-eslint-rules",
    "tslint-config-prettier",
    "angular-tslint-rules"
  ],
  "rulesDirectory": ["node_modules/codelyzer"],
  "rules": {
    "no-console": false,
    "no-constant-condition": true,
    "export-name": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "ignore",
          "arrays": "ignore",
          "functions": "ignore",
          "typeLiterals": "ignore"
        },
        "singleline": "ignore",
        "esSpecCompliant": true
      }
    ]
  }
}
